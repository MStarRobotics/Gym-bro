{
  "name": "GymGenius Dev Container",
  "dockerFile": "Dockerfile",
  "settings": {
    "python.formatting.provider": "black",
    "python.languageServer": "Pylance",
    "python.analysis.extraPaths": ["/workspace/packages/backend"],
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
    "dart.flutterSdkPaths": ["/usr/local/flutter"]
  },
  "extensions": [
    "ms-python.python",
    "ms-python.vscode-pylance",
    "ms-azuretools.vscode-docker",
    "esbenp.prettier-vscode",
    "ms-vscode-remote.remote-containers",
    "eamodio.gitlens",
    "Dart-Code.dart-code",
    "Dart-Code.flutter",
    "github.vscode-pull-request-github"
  ],
  "forwardPorts": [8000, 3000],
  "postCreateCommand": "poetry install --no-root --only main && poetry install --no-root --only dev || true; npm install -g yarn || true; flutter --version || true",
  "remoteUser": "vscode"
}
